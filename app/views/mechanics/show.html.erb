<h2>Mechanic: <%= @mechanic.name %></h2>
<p>Years of Experience: <%= @mechanic.experience %></p>
<h3>Current rides they're working on:</h3>
<% @mechanic.rides.each do |ride| %>
  <ol type = '1'>
    <li><%= ride.name %></li>
  </ol>
<% end  %>

<%= form_tag "/mechanics/#{@mechanic.id}", method: :patch do %>
  <p>Add a ride to workload:</p>
  <p><%= label_tag 'Ride ID:' %></p>
  <p><%= text_field_tag :ride_id %></p>

  <%= submit_tag 'Submit' %>
<% end %>
